{
  "manifest_version": 3,
  "name": "Vimtion: Vim for Notion",
  "version": "1.3.0",
  "description": "A Chrome extension that brings Vim keybindings to Notion",
  "author": "Tatsuya Kamijo",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["storage"],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options/options.html",
  "content_scripts": [
    {
      "matches": ["*://*.notion.so/*"],
      "js": ["content_scripts/vim.js", "content_scripts/update-notification.js"],
      "css": ["content_scripts/vim.css", "content_scripts/update-notification.css"]
    }
  ]
}
